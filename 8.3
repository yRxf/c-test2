#include <iostream>
#include <cstring>
#include <cctype>
using namespace std;

void vrhr(string &str);
int main()
{
    string str;
    cout << "Enter a string (q to quit): ";
    getline(cin, str);
    while (str != "q" && str != "quit")
    {
        vrhr(str);
        cout << str << endl;
        cout << "Enter a string (q to quit): ";
        getline(cin, str);
    }
    cout << "Bye." << endl;
    return 0;
}

void vrhr(string &str)
{
    int size = str.size();
    for (int i = 0; i < size; i++)
    {
        str[i] = toupper(str[i]);
    }
}
